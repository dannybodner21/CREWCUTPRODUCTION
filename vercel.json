{
  "buildCommand": "NODE_OPTIONS='--max-old-space-size=8192' npm run build",
  "installCommand": "npm install --force --legacy-peer-deps",
  "functions": {
    "app/**/*.ts": {
      "maxDuration": 300
    }
  },
  "env": {
    "NPM_CONFIG_PACKAGE_MANAGER": "npm",
    "DISABLE_PNPM": "true",
    "NODE_OPTIONS": "--max-old-space-size=8192"
  }
}